<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listar_produtos_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produto.ListarProdutoFragment"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/listar_produtos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listar_produtos_title"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ListView
        android:id="@+id/produtos_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/listar_produtos_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>